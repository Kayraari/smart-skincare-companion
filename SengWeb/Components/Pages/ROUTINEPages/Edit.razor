@page "/routines/edit"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<SengWeb.Data.SengWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>ROUTINE</h2>
<hr />
@if (ROUTINE is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="ROUTINE" OnValidSubmit="UpdateROUTINE" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="ROUTINE.RoutineID" value="@ROUTINE.RoutineID" />
                <div class="mb-3">
                    <label for="userid" class="form-label">UserID:</label>
                    <InputNumber id="userid" @bind-Value="ROUTINE.UserID" class="form-control" />
                    <ValidationMessage For="() => ROUTINE.UserID" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="routinename" class="form-label">RoutineName:</label>
                    <InputText id="routinename" @bind-Value="ROUTINE.RoutineName" class="form-control" />
                    <ValidationMessage For="() => ROUTINE.RoutineName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="routinetype" class="form-label">RoutineType:</label>
                    <InputText id="routinetype" @bind-Value="ROUTINE.RoutineType" class="form-control" />
                    <ValidationMessage For="() => ROUTINE.RoutineType" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="lastmodified" class="form-label">LastModified:</label>
                    <InputDate id="lastmodified" @bind-Value="ROUTINE.LastModified" class="form-control" />
                    <ValidationMessage For="() => ROUTINE.LastModified" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/routines">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int RoutineID { get; set; }

    [SupplyParameterFromForm]
    private ROUTINE? ROUTINE { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ROUTINE ??= await context.ROUTINE.FirstOrDefaultAsync(m => m.RoutineID == RoutineID);

        if (ROUTINE is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateROUTINE()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(ROUTINE!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ROUTINEExists(ROUTINE!.RoutineID))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/routines");
    }

    private bool ROUTINEExists(int routineid)
    {
        using var context = DbFactory.CreateDbContext();
        return context.ROUTINE.Any(e => e.RoutineID == routineid);
    }
}
