@page "/profile/{userid:int}"
@rendermode InteractiveServer
@using DataAccess
@using SengWeb.Data
@using Microsoft.EntityFrameworkCore
@inject SengWebContext DbContext

<PageTitle>User Profile</PageTitle>

<div class="container mt-4">
    @if (user == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading user profile...</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3>User Profile</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>User ID:</strong> @user.UserID</p>
                        <p><strong>Email:</strong> @user.Email</p>
                        <p><strong>Skin Type:</strong> @(user.SkinType ?? "Not specified")</p>
                        <p><strong>Skin Goals:</strong> @(user.SkinGoals ?? "Not specified")</p>
                        <p><strong>Age:</strong> @(user.Age?.ToString() ?? "Not specified")</p>
                        <p><strong>Allergies:</strong> @(user.Allergies ?? "None specified")</p>
                        <p><strong>Last Modified:</strong> @(user.LastModified.ToString("yyyy-MM-dd HH:mm") ?? "Never")</p>
                    </div>
                </div>
            </div>
        </div>

            <div class="mt-3">
                <a href="/" class="btn btn-secondary me-2">Back to Login</a>
                <a href="@($"/profile/addproduct/{user?.UserID}")" class="btn btn-primary me-2">
                    Add Product
                </a>
                <a href="@($"/profile/routines/{user?.UserID}")" class="btn btn-info">
                    View Routines
                </a>
            </div>



        <!-- Product list section -->
        @if (userRoutines != null && userRoutines.Any())
        {
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>My Routines</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Routine Name</th>
                                            <th>Routine Type</th>
                                            <th>Last Modified</th>
                                            <th>Steps</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var routine in userRoutines)
                                        {
                                            <tr>
                                                <td>@routine.RoutineName</td>
                                                <td>@routine.RoutineType</td>
                                                <td>@routine.LastModified.ToString("yyyy-MM-dd HH:mm")</td>
                                                <td>
                                                    @if (routineSteps.TryGetValue(routine.RoutineID, out var steps) && steps.Any())
                                                    {
                                                        <ul class="mb-0">
                                                            @foreach (var step in steps)
                                                            {
                                                                <li>
                                                                    <b>@step.StepOrder.</b>
                                                                    @step.PRODUCT?.ProductName
                                                                    @if (!string.IsNullOrWhiteSpace(step.Notes))
                                                                    {
                                                                        <span class="text-muted">(@step.Notes)</span>
                                                                    }
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No steps</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (userRoutines != null)
        {
            <div class="alert alert-info mt-3">You don't have any routines yet.</div>
        }

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>My Products</h4>
                    </div>




                    <div class="card-body">
                        @if (userOwnedProducts == null)
                        {
                            <div class="text-center">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p>Loading your products...</p>
                            </div>
                        }
                        else if (!userOwnedProducts.Any())
                        {
                            <div class="text-center">
                                <p class="text-muted">You don't own any products yet.</p>
                                <a href="@($"/profile/addproduct/{user?.UserID}")" class="btn btn-primary">
                                    Add Your First Product
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Product Name</th>
                                            <th>Brand</th>
                                            <th>Category</th>
                                            <th>Description</th>
                                            <th>Quantity</th>
                                            <th>Expiry Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ownership in userOwnedProducts)
                                        {
                                            <tr>
                                                <td>@ownership.PRODUCT.ProductName</td>
                                                <td>@(ownership.PRODUCT.Brand ?? "N/A")</td>
                                                <td>@(ownership.PRODUCT.Category ?? "N/A")</td>
                                                <td>@(ownership.PRODUCT.Description?.Length > 50 ? ownership.PRODUCT.Description.Substring(0, 50) + "..." : ownership.PRODUCT.Description ?? "No description")</td>
                                                <td>@(ownership.Quantity?.ToString() ?? "N/A")</td>
                                                <td>@(ownership.ExpiryDate?.ToString("yyyy-MM-dd") ?? "Not set")</td>
                                                <td>
                                                    <button class="btn btn-danger btn-sm" @onclick="() => RemoveProduct(ownership.ProductID)" disabled="@isProcessing">
                                                        @if (isProcessing && processingProductId == ownership.ProductID)
                                                        {
                                                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                                        }
                                                        Remove
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    }
</div>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
    </div>
}

@code {
    private List<ROUTINE>? userRoutines;
    private Dictionary<int, List<ROUTINESTEP>> routineSteps = new();

    protected override async Task OnInitializedAsync()
    
    {
        await LoadUserData();
        await LoadUserProducts();
        await LoadUserRoutines();
    }
    private async Task LoadUserData()
    {
        try
        {
            user = await DbContext.User.FirstOrDefaultAsync(u => u.UserID == UserId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading user data: {ex.Message}";
        }
    }

    private async Task LoadUserProducts()
    {
        try
        {
            userOwnedProducts = await DbContext.OWNERSHIP
                .Include(o => o.PRODUCT)
                .Where(o => o.UserID == UserId)
                .OrderBy(o => o.PRODUCT.ProductName)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading user products: {ex.Message}";
        }
    }
    private async Task LoadUserRoutines()
    {
        try
        {
            userRoutines = await DbContext.ROUTINE
                .Where(r => r.UserID == UserId)
                .OrderBy(r => r.RoutineName)
                .ToListAsync();
            routineSteps.Clear();
            foreach (var routine in userRoutines)
            {
                var steps = await DbContext.ROUTINESTEP
                    .Include(s => s.PRODUCT)
                    .Where(s => s.RoutineID == routine.RoutineID)
                    .OrderBy(s => s.StepOrder)
                    .ToListAsync();
                routineSteps[routine.RoutineID] = steps;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading routines: {ex.Message}";
        }
    }
    private async Task RemoveProduct(int productId)
    {
        if (isProcessing) return;

        isProcessing = true;
        processingProductId = productId;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            var ownership = await DbContext.OWNERSHIP
                .FirstOrDefaultAsync(o => o.UserID == UserId && o.ProductID == productId);

            if (ownership == null)
            {
                errorMessage = "Product ownership not found.";
                return;
            }

            DbContext.OWNERSHIP.Remove(ownership);
            await DbContext.SaveChangesAsync();

            // Refresh the product list
            await LoadUserProducts();

            successMessage = "Successfully removed product from your collection!";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error removing product: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            processingProductId = 0;
        }
    }



   

    [Parameter] public int UserId { get; set; }
    

    private User? user;
    private List<OWNERSHIP>? userOwnedProducts;
    private bool isProcessing = false;
    private int processingProductId = 0;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    
   }

    
