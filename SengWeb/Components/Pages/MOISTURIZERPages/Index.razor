@page "/moisturizers"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using DataAccess
@using SengWeb.Data
@implements IAsyncDisposable
@inject IDbContextFactory<SengWeb.Data.SengWebContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="moisturizers/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.MOISTURIZER">
    <PropertyColumn Property="moisturizer => moisturizer.Texture" />
    <PropertyColumn Property="moisturizer => moisturizer.IsNightCream" />

    <TemplateColumn Context="moisturizer">
        <a href="@($"moisturizers/edit?id={moisturizer.ID}")">Edit</a> |
        <a href="@($"moisturizers/details?id={moisturizer.ID}")">Details</a> |
        <a href="@($"moisturizers/delete?id={moisturizer.ID}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private SengWebContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
