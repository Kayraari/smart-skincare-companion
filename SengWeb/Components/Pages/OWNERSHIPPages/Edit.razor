@page "/ownerships/edit"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<SengWeb.Data.SengWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>OWNERSHIP</h2>
<hr />
@if (OWNERSHIP is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="OWNERSHIP" OnValidSubmit="UpdateOWNERSHIP" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="OWNERSHIP.UserID" value="@OWNERSHIP.UserID" />
                <div class="mb-3">
                    <label for="id" class="form-label">ID:</label>
                    <InputNumber id="id" @bind-Value="OWNERSHIP.ID" class="form-control" />
                    <ValidationMessage For="() => OWNERSHIP.ID" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity:</label>
                    <InputNumber id="quantity" @bind-Value="OWNERSHIP.Quantity" class="form-control" />
                    <ValidationMessage For="() => OWNERSHIP.Quantity" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="expirydate" class="form-label">ExpiryDate:</label>
                    <InputDate id="expirydate" @bind-Value="OWNERSHIP.ExpiryDate" class="form-control" />
                    <ValidationMessage For="() => OWNERSHIP.ExpiryDate" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="lastmodified" class="form-label">LastModified:</label>
                    <InputDate id="lastmodified" @bind-Value="OWNERSHIP.LastModified" class="form-control" />
                    <ValidationMessage For="() => OWNERSHIP.LastModified" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/ownerships">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int UserID { get; set; }

    [SupplyParameterFromForm]
    private OWNERSHIP? OWNERSHIP { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        OWNERSHIP ??= await context.OWNERSHIP.FirstOrDefaultAsync(m => m.UserID == UserID);

        if (OWNERSHIP is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateOWNERSHIP()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(OWNERSHIP!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!OWNERSHIPExists(OWNERSHIP!.UserID))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/ownerships");
    }

    private bool OWNERSHIPExists(int userid)
    {
        using var context = DbFactory.CreateDbContext();
        return context.OWNERSHIP.Any(e => e.UserID == userid);
    }
}
