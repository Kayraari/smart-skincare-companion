@page "/ownerships/delete"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<SengWeb.Data.SengWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>OWNERSHIP</h2>
    <hr />
    @if (ownership is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@ownership.ID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Quantity</dt>
            <dd class="col-sm-10">@ownership.Quantity</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ExpiryDate</dt>
            <dd class="col-sm-10">@ownership.ExpiryDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastModified</dt>
            <dd class="col-sm-10">@ownership.LastModified</dd>
        </dl>
        <EditForm method="post" Model="ownership" OnValidSubmit="DeleteOWNERSHIP" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(ownership is null)">Delete</button> |
            <a href="/ownerships">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private OWNERSHIP? ownership;

    [SupplyParameterFromQuery]
    private int UserID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ownership = await context.OWNERSHIP.FirstOrDefaultAsync(m => m.UserID == UserID);

        if (ownership is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteOWNERSHIP()
    {
        using var context = DbFactory.CreateDbContext();
        context.OWNERSHIP.Remove(ownership!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/ownerships");
    }
}
